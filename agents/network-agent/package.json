{
  "name": "@a2z-soc/network-agent",
  "version": "1.2.4",
  "description": "A2Z SOC Network Security Agent - Cross-platform network monitoring and threat detection",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "pkg . --out-path dist/",
    "build-macos": "./scripts/build-macos-agent.sh",
    "build-dmg": "./scripts/build-macos-dmg.sh",
    "test": "jest",
    "lint": "eslint src/",
    "install-service": "node scripts/install-service.js",
    "uninstall-service": "node scripts/uninstall-service.js",
    "setup-macos": "npm run install-deps-macos && npm run build-macos",
    "install-deps-macos": "echo 'Using system tools instead of native dependencies for better macOS compatibility'"
  },
  "keywords": [
    "cybersecurity",
    "network-monitoring",
    "intrusion-detection",
    "soc",
    "agent",
    "macos",
    "cross-platform"
  ],
  "author": "A2Z SOC Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "ws": "^8.14.0",
    "uuid": "^9.0.0",
    "node-cron": "^3.0.3",
    "compression": "^1.7.4",
    "winston": "^3.11.0",
    "systeminformation": "^5.21.0",
    "node-pty": "^1.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "rate-limiter-flexible": "^4.0.0",
    "dotenv": "^16.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "eslint": "^8.52.0",
    "pkg": "^5.8.1"
  },
  "optionalDependencies": {
    "cap": "^0.2.1"
  },
  "pkg": {
    "scripts": "src/**/*.js",
    "assets": "config/**/*",
    "targets": [
      "node18-linux-x64",
      "node18-win-x64",
      "node18-macos-x64",
      "node18-macos-arm64"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/a2z-soc/network-agent.git"
  },
  "bugs": {
    "url": "https://github.com/a2z-soc/network-agent/issues"
  },
  "homepage": "https://a2zsoc.com"
} 