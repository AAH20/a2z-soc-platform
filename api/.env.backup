# =============================================================================
# A2Z SOC PLATFORM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and configure with your settings

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://a2z_ids:secure_password@localhost:5432/a2z_ids
DB_HOST=localhost
DB_PORT=5432
DB_NAME=a2z_soc_platform
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=24h
BCRYPT_ROUNDS=12

# Session configuration
SESSION_SECRET=your-session-secret-change-this
SESSION_TIMEOUT=24

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001
FRONTEND_URL=http://localhost:5173

# CORS configuration
CORS_ORIGIN=http://localhost:5173

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Settings (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email branding
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=A2Z SOC
SUPPORT_EMAIL=support@yourdomain.com

# =============================================================================
# STRIPE BILLING CONFIGURATION
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe pricing configuration
STRIPE_STARTER_PRICE_ID=price_starter_plan_id
STRIPE_PROFESSIONAL_PRICE_ID=price_professional_plan_id
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_plan_id

# =============================================================================
# CLOUD PROVIDER CREDENTIALS
# =============================================================================

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# Azure Configuration
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your_gcp_project_id
GOOGLE_CLOUD_PRIVATE_KEY=your_gcp_private_key
GOOGLE_CLOUD_CLIENT_EMAIL=your_gcp_client_email

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# THREAT INTELLIGENCE APIS
# =============================================================================
VIRUSTOTAL_API_KEY=your_virustotal_api_key
SHODAN_API_KEY=your_shodan_api_key
ABUSE_IPDB_API_KEY=your_abuseipdb_api_key
ALIENVAULT_API_KEY=your_alienvault_api_key

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
DEEPSEEK_API_KEY=your_deepseek_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# =============================================================================
# ELASTICSEARCH/OPENSEARCH
# =============================================================================
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme

OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=combined

# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Sentry error tracking
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API specific rate limits
API_RATE_LIMIT_MAX=1000
API_RATE_LIMIT_WINDOW=3600000

# =============================================================================
# FILE UPLOAD & STORAGE
# =============================================================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=pdf,docx,txt,csv,json

# S3 Storage (optional)
S3_BUCKET_NAME=your_s3_bucket
S3_REGION=us-east-1

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
WEBHOOK_SECRET=your_webhook_secret_for_integrations

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_AI_INSIGHTS=true
FEATURE_THREAT_INTEL=true
FEATURE_CLOUD_DISCOVERY=true
FEATURE_COMPLIANCE_REPORTING=true
FEATURE_VULNERABILITY_SCANNING=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=false
SKIP_EMAIL_VERIFICATION=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Uncomment for production deployment
# NODE_ENV=production
# DATABASE_SSL=true
# FORCE_HTTPS=true
# TRUST_PROXY=true

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================================================
# COMPLIANCE & AUDIT
# =============================================================================
AUDIT_LOG_RETENTION_DAYS=365
GDPR_COMPLIANCE=true
HIPAA_COMPLIANCE=false
SOC2_COMPLIANCE=true

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
SLACK_WEBHOOK_URL=your_slack_webhook_url
TEAMS_WEBHOOK_URL=your_teams_webhook_url
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# =============================================================================
# API INTEGRATIONS
# =============================================================================
# CrowdStrike
CROWDSTRIKE_CLIENT_ID=your_crowdstrike_client_id
CROWDSTRIKE_CLIENT_SECRET=your_crowdstrike_client_secret

# SentinelOne
SENTINELONE_API_TOKEN=your_sentinelone_api_token
SENTINELONE_BASE_URL=your_sentinelone_instance_url

# Splunk
SPLUNK_HOST=your_splunk_host
SPLUNK_PORT=8089
SPLUNK_USERNAME=your_splunk_username
SPLUNK_PASSWORD=your_splunk_password

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/a2z_soc_test
TEST_EMAIL_BACKEND=console
TEST_SKIP_MIGRATIONS=false 