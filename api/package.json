{
  "name": "a2z-soc-api",
  "version": "1.0.0",
  "description": "A2Z SOC - AI-Powered Security Operations Center API",
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testMatch='**/*.integration.test.js'",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "migrate": "node ../database/migrate.js migrate",
    "migrate:status": "node ../database/migrate.js status",
    "migrate:create": "node ../database/migrate.js create",
    "migrate:rollback": "node ../database/migrate.js rollback",
    "seed": "node scripts/seedData.js",
    "build": "echo 'No build step required for Node.js backend'",
    "docker:build": "docker build -t a2z-soc-api .",
    "docker:run": "docker run -p 3001:3001 --env-file .env a2z-soc-api",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix"
  },
  "dependencies": {
    "@aws-sdk/client-cloudtrail": "^3.456.0",
    "@aws-sdk/client-ec2": "^3.456.0",
    "@aws-sdk/client-ecs": "^3.456.0",
    "@aws-sdk/client-guardduty": "^3.456.0",
    "@aws-sdk/client-iam": "^3.456.0",
    "@aws-sdk/client-lambda": "^3.456.0",
    "@aws-sdk/client-s3": "^3.456.0",
    "@aws-sdk/client-sts": "^3.821.0",
    "@azure/arm-appservice": "^16.0.0",
    "@azure/arm-compute": "^21.0.0",
    "@azure/arm-containerservice": "^19.7.0",
    "@azure/arm-keyvault": "^3.2.0",
    "@azure/arm-monitor": "^7.0.0",
    "@azure/arm-network": "^33.1.0",
    "@azure/arm-resources": "^6.1.0",
    "@azure/arm-security": "^5.0.0",
    "@azure/arm-sql": "^10.0.0",
    "@azure/arm-storage": "^18.5.0",
    "@azure/arm-subscriptions": "^5.1.0",
    "@azure/identity": "^4.0.1",
    "@elastic/elasticsearch": "^8.11.0",
    "@google-cloud/compute": "^4.7.0",
    "@google-cloud/container": "^5.9.0",
    "@google-cloud/functions": "^3.3.0",
    "@google-cloud/logging": "^11.0.0",
    "@google-cloud/monitoring": "^4.0.0",
    "@google-cloud/security-center": "^9.0.1",
    "@google-cloud/sql": "^0.20.1",
    "@google-cloud/storage": "^7.16.0",
    "@opensearch-project/opensearch": "^2.4.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.2",
    "cheerio": "^1.0.0-rc.12",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^2.0.6",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.9.7",
    "pdf-parse": "^1.1.1",
    "pg": "^8.11.3",
    "prom-client": "^15.0.0",
    "redis": "^4.6.10",
    "socket.io": "^4.7.4",
    "stripe": "^14.5.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "bcrypt": "^5.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js",
      "!index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:security/recommended",
      "plugin:jest/recommended",
      "prettier"
    ],
    "plugins": [
      "security",
      "jest",
      "prettier"
    ],
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "prettier/prettier": "error",
      "no-console": "off",
      "security/detect-object-injection": "off",
      "security/detect-non-literal-require": "off"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "keywords": [
    "security",
    "soc",
    "cybersecurity",
    "ai",
    "threat-detection",
    "incident-response",
    "compliance",
    "saas",
    "multi-tenant"
  ],
  "author": "A2Z SOC Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/a2z-soc/a2z-soc-platform.git"
  },
  "bugs": {
    "url": "https://github.com/a2z-soc/a2z-soc-platform/issues"
  },
  "homepage": "https://github.com/a2z-soc/a2z-soc-platform#readme"
}
