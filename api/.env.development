# A2Z SOC Development Environment
NODE_ENV=development
PORT=3001
HOST=localhost

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/a2z_soc_dev

# Redis (optional for development)
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=development-jwt-secret-key-at-least-32-chars-long-12345
API_KEY_SECRET=development-api-key-secret
SESSION_SECRET=development-session-secret

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Features
ENABLE_AI_FEATURES=true
ENABLE_COMPLIANCE_MODULE=true
ENABLE_CLOUD_INTEGRATIONS=true
ENABLE_THREAT_INTELLIGENCE=true
ENABLE_ROI_DASHBOARD=true

# API Documentation
ENABLE_API_DOCS=true
API_DOCS_PATH=/api/docs

# Logging
LOG_LEVEL=debug
DEBUG=a2z-soc:*

# File Uploads
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Email (optional for development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
FROM_EMAIL=dev@a2zsoc.com
FROM_NAME=A2Z SOC Development

# Stripe (test keys for development)
# Get these from https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_test_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_test_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Third-party APIs (optional)
VIRUSTOTAL_API_KEY=your_virustotal_api_key
OPENAI_API_KEY=your_openai_api_key 