{
  "name": "@a2z-soc/network-agent",
  "version": "1.0.0",
  "description": "A2Z SOC Network Security Agent - Lightweight network monitoring and threat detection",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "pkg . --out-path dist/",
    "test": "jest",
    "lint": "eslint src/",
    "install-service": "node scripts/install-service.js",
    "uninstall-service": "node scripts/uninstall-service.js"
  },
  "keywords": [
    "cybersecurity",
    "network-monitoring",
    "intrusion-detection",
    "soc",
    "agent"
  ],
  "author": "A2Z SOC Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "express": "^5.1.0",
    "fs": "^0.0.1-security",
    "node-cron": "^3.0.3",
    "os": "^0.1.2",
    "path": "^0.12.7",
    "pcap": "^3.0.0",
    "uuid": "^9.0.0",
    "winston": "^3.11.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "scripts": "src/**/*.js",
    "assets": "config/**/*",
    "targets": [
      "node18-linux-x64",
      "node18-win-x64",
      "node18-macos-x64"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
